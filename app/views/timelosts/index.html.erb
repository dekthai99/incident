<h1>Listing timelosts</h1>

<table>
  <tr>
    <th>Condition</th>
    <th>Description</th>
  </tr>

<% for timelost in @timelosts %>
  <tr>
    <td><%=h timelost.condition %></td>
    <td><%=h timelost.description %></td>
    <td><%= link_to 'Show', timelost %></td>
    <td><%= link_to 'Edit', edit_timelost_path(timelost) %></td>
    <td><%= link_to 'Destroy', timelost, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New timelost', new_timelost_path %>
