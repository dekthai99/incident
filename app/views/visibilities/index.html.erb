<h1>Listing visibilities</h1>

<table>
  <tr>
    <th>Condition</th>
    <th>Description</th>
  </tr>

<% for visibility in @visibilities %>
  <tr>
    <td><%=h visibility.condition %></td>
    <td><%=h visibility.description %></td>
    <td><%= link_to 'Show', visibility %></td>
    <td><%= link_to 'Edit', edit_visibility_path(visibility) %></td>
    <td><%= link_to 'Destroy', visibility, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New visibility', new_visibility_path %>
