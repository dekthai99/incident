<h1>Listing events</h1>

<table>
  <tr>
    <th>Airport</th>
    <th>Location</th>
    <th>Person</th>
    <th>Sky</th>
    <th>Visibility</th>
    <th>Percipitation</th>
    <th>Event details</th>
    <th>Start date</th>
    <th>Start time</th>
    <th>End date</th>
    <th>End time</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.airport_id %></td>
    <td><%=h event.location_id %></td>
    <td><%=h event.person_id %></td>
    <td><%=h event.sky_id %></td>
    <td><%=h event.visibility_id %></td>
    <td><%=h event.percipitation_id %></td>
    <td><%=h event.event_details %></td>
    <td><%=h event.start_date %></td>
    <td><%=h event.start_time %></td>
    <td><%=h event.end_date %></td>
    <td><%=h event.end_time %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

