<h1>Editing employer</h1>

<% form_for(@employer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :others %><br />
    <%= f.text_area :others %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @employer %> |
<%= link_to 'Back', employers_path %>
