<h1>Editing occupation</h1>

<% form_for(@occupation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :others %><br />
    <%= f.text_field :others %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @occupation %> |
<%= link_to 'Back', occupations_path %>
