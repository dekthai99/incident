<h1>Editing percipitation</h1>

<% form_for(@percipitation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :condition %><br />
    <%= f.text_field :condition %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @percipitation %> |
<%= link_to 'Back', percipitations_path %>
